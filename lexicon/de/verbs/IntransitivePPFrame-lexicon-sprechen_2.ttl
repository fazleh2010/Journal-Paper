@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "de" ;
  lemon:entry    :sprechen_2 ;
  lemon:entry    :preposition .

:sprechen_2 a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :sprechen_2_present ;
  lemon:otherForm      :sprechen_2_past ;
  lemon:otherForm      :sprechen_2_perfect ;
  lemon:sense          :sprechen_2_sense_1 ;
  lemon:synBehavior    :sprechen_2_frame .

:sprechen_2_present a           lemon:Form ;
  lemon:writtenRep     "sprechen"@de ;
  lexinfo:verbFormMood lexinfo:infinitive .


:sprechen_2_present a      lemon:Form ;
  lemon:writtenRep "spricht"@de ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:sprechen_2_past a lemon:Form ;
  lemon:writtenRep  "sprach"@de ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:sprechen_2_perfect a lemon:Form ;
  lemon:writtenRep  "gesprochen"@de ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:perfect .

:sprechen_2_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :sprechen_2_subj ;
  lexinfo:prepositionalAdjunct :sprechen_2_obj .

:sprechen_2_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :sprechen_2_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/language> ;
  lemon:subjOfProp  :sprechen_2_obj ;
  lemon:objOfProp   :sprechen_2_subj ;
  lemon:condition   :sprechen_2_sense_1_condition .

:sprechen_2_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Location> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Language> .


:sprechen_2_obj lemon:marker :in .

## Prepositions ##
:preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@de ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

