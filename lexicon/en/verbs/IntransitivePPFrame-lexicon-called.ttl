@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :called ;
  lemon:entry    :form_called_preposition .

:called a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_called ;
  lemon:otherForm      :form_called_past ;
  lemon:sense          :called_sense_1 ;
  lemon:synBehavior    :called_frame .

:form_called a           lemon:Form ;
  lemon:writtenRep     "call"@en ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_called a      lemon:Form ;
  lemon:writtenRep "calls"@en ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_called_past a lemon:Form ;
  lemon:writtenRep  "called"@en ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .


:form_calledperfect a   lemon:Form ;
  lemon:writtenRep "called"@en ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:called_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :called_subj ;
  lexinfo:prepositionalAdjunct :called_obj .

:called_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :called_ontomap ;
  lemon:reference   <http://dbpedia.org/property/nickname> ;
  lemon:subjOfProp  :called_obj ;
  lemon:objOfProp   :called_subj ;
  lemon:condition   :called_sense_1_condition .

:called_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema#string> .


:called_obj lemon:marker :as .

## Prepositions ##
:form_called_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "as"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

