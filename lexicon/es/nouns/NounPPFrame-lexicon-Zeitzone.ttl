@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "es" ;
  lemon:entry    :Zeitzone ;
  lemon:entry    :Zeitzone_form_preposition .

:Zeitzone a       lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:noun ;
  lemon:canonicalForm  :Zeitzone_form ;
  lemon:otherForm  :Zeitzone_singular ;
  lemon:otherForm  :Zeitzone_plural ;
  lemon:sense          :Zeitzone_sense_1 ;
  lemon:synBehavior    :Zeitzone_nounpp .

:Zeitzone_form a lemon:Form ;
  lemon:writtenRep "zona horaria"@es .

:Zeitzone_singular a    lemon:Form ;
  lemon:writtenRep "zona horaria"@es ;
  lexinfo:number   lexinfo:singular .

:Zeitzone_plural a   lemon:Form ;
  lemon:writtenRep "zonas horarias"@es ;
  lexinfo:number    lexinfo:plural .

:Zeitzone_nounpp a        lexinfo:NounPPFrame ;
  lexinfo:copulativeArg        :arg1 ;
  lexinfo:prepositionalAdjunct :arg2 .

:Zeitzone_sense_1 a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping         :Zeitzone_sense_1 ;
  lemon:reference           <http://dbpedia.org/property/timezone> ;
  lemon:subjOfProp          :arg2 ;
  lemon:objOfProp           :arg1 ;
  lemon:condition           :Zeitzone_sense_1_condition .

:Zeitzone_sense_1_condition a lemon:condition ;
  lemon:propertyDomain  <http://dbpedia.org/ontology/City> ;
  lemon:propertyRange   <http://www.w3.org/2001/XMLSchema#string> .

:arg2 lemon:marker :Zeitzone_form_preposition .
## Prepositions ##
:Zeitzone_form_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "de"@es ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

