@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :dieIn ;
  lemon:entry    :form_dieIn_present_preposition .

:dieIn a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_dieIn_present ;
  lemon:otherForm      :dieIn_present3rd ;
  lemon:otherForm      :dieIn_past ;
  lemon:otherForm      :dieIn_perfect ;
  lemon:sense          :dieIn_sense_1 ;
  lemon:sense          :dieIn_sense_2 ;
  lemon:synBehavior    :dieIn_frame .

:form_dieIn_present a           lemon:Form ;
  lemon:writtenRep     "morire"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:dieIn_present3rd a      lemon:Form ;
  lemon:writtenRep "� morto"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:dieIn_past a lemon:Form ;
  lemon:writtenRep  "mor�"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:dieIn_perfect a lemon:Form ;
  lemon:writtenRep  "mor�"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:perfect .

:dieIn_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :dieIn_subj ;
  lexinfo:prepositionalAdjunct :dieIn_obj .

:dieIn_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :dieIn_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/deathPlace> ;
  lemon:subjOfProp  :dieIn_obj ;
  lemon:objOfProp   :dieIn_subj ;
  lemon:condition   :dieIn_sense_1_condition .

:dieIn_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Place> .

:dieIn_sense_2 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :dieIn_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/deathPlace> ;
  lemon:subjOfProp  :dieIn_obj ;
  lemon:objOfProp   :dieIn_subj ;
  lemon:condition   :dieIn_sense_2_condition .

:dieIn_sense_2_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/City> .


:dieIn_obj lemon:marker :in .

:arg2 lemon:marker :form_dieIn_present_preposition .

## Prepositions ##

:form_dieIn_present_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .