@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :born_on ;
  lemon:entry    :nel .

:born_on a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_born_on ;
  lemon:otherForm      :form_born_on_past ;
  lemon:sense          :born_on_sense_1 ;
  lemon:synBehavior    :born_on_frame .

:form_born_on a           lemon:Form ;
  lemon:writtenRep     "nascere"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_born_on a      lemon:Form ;
  lemon:writtenRep "nasce"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_born_on_past a lemon:Form ;
  lemon:writtenRep  "nato"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:born_on_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :born_on_subj ;
  lexinfo:prepositionalAdjunct :born_on_obj .

:born_on_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :born_on_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/birthDate> ;
  lemon:subjOfProp  :born_on_obj ;
  lemon:objOfProp   :born_on_subj ;
  lemon:condition   :born_on_sense_1_condition .

:born_on_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:born_on_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

