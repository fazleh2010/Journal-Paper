@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :associate_with ;
  lemon:entry    :a .

:associate_with a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_associate_with ;
  lemon:otherForm      :form_associate_with_past ;
  lemon:sense          :associate_with_sense_1 ;
  lemon:synBehavior    :associate_with_frame .

:form_associate_with a           lemon:Form ;
  lemon:writtenRep     "essere legata"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_associate_with a      lemon:Form ;
  lemon:writtenRep "?? legata"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_associate_with_past a lemon:Form ;
  lemon:writtenRep  "era legata"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:associate_with_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :associate_with_subj ;
  lexinfo:prepositionalAdjunct :associate_with_obj .

:associate_with_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :associate_with_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/associatedBand> ;
  lemon:subjOfProp  :associate_with_obj ;
  lemon:objOfProp   :associate_with_subj ;
  lemon:condition   :associate_with_sense_1_condition .

:associate_with_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Band> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Band> .


:associate_with_obj lemon:marker :a .

## Prepositions ##
:a a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "a"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

