@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :compose_for ;
  lemon:entry    :per .

:compose_for a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_compose_for ;
  lemon:otherForm      :form_compose_for_past ;
  lemon:sense          :compose_for_sense_1 ;
  lemon:synBehavior    :compose_for_frame .

:form_compose_for a           lemon:Form ;
  lemon:writtenRep     "comporre"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_compose_for a      lemon:Form ;
  lemon:writtenRep "compone"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_compose_for_past a lemon:Form ;
  lemon:writtenRep  "composto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:compose_for_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :compose_for_subj ;
  lexinfo:prepositionalAdjunct :compose_for_obj .

:compose_for_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :compose_for_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/musicComposer> ;
  lemon:subjOfProp  :compose_for_obj ;
  lemon:objOfProp   :compose_for_subj ;
  lemon:condition   :compose_for_sense_1_condition .

:compose_for_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Work> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Person> .


:compose_for_obj lemon:marker :per .

## Prepositions ##
:per a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "per"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

