@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :introduced_in ;
  lemon:entry    :nel .

:introduced_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_introduced_in ;
  lemon:otherForm      :form_introduced_in_past ;
  lemon:sense          :introduced_in_sense_1 ;
  lemon:synBehavior    :introduced_in_frame .

:form_introduced_in a           lemon:Form ;
  lemon:writtenRep     "introdurre"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_introduced_in a      lemon:Form ;
  lemon:writtenRep "introduce"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_introduced_in_past a lemon:Form ;
  lemon:writtenRep  "introdotto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:introduced_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :introduced_in_subj ;
  lexinfo:prepositionalAdjunct :introduced_in_obj .

:introduced_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :introduced_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/introduced> ;
  lemon:subjOfProp  :introduced_in_obj ;
  lemon:objOfProp   :introduced_in_subj ;
  lemon:condition   :introduced_in_sense_1_condition .

:introduced_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Beverage> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/gYear> .


:introduced_in_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

