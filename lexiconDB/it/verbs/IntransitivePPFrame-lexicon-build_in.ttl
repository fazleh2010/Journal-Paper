@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :build_in ;
  lemon:entry    :nel .

:build_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_build_in ;
  lemon:otherForm      :form_build_in_past ;
  lemon:sense          :build_in_sense_1 ;
  lemon:synBehavior    :build_in_frame .

:form_build_in a           lemon:Form ;
  lemon:writtenRep     "costruire"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_build_in a      lemon:Form ;
  lemon:writtenRep "costruisce"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_build_in_past a lemon:Form ;
  lemon:writtenRep  "costruito"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:build_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :build_in_subj ;
  lexinfo:prepositionalAdjunct :build_in_obj .

:build_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :build_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/buildingStartDate> ;
  lemon:subjOfProp  :build_in_obj ;
  lemon:objOfProp   :build_in_subj ;
  lemon:condition   :build_in_sense_1_condition .

:build_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/ArchitecturalStructure> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/gYear> .


:build_in_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

