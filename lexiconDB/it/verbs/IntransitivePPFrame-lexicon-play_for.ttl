@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :play_for ;
  lemon:entry    :per .

:play_for a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_play_for ;
  lemon:otherForm      :form_play_for_past ;
  lemon:sense          :play_for_sense_1 ;
  lemon:synBehavior    :play_for_frame .

:form_play_for a           lemon:Form ;
  lemon:writtenRep     "giocare"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_play_for a      lemon:Form ;
  lemon:writtenRep "gioca"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_play_for_past a lemon:Form ;
  lemon:writtenRep  "giocava"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:play_for_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :play_for_subj ;
  lexinfo:prepositionalAdjunct :play_for_obj .

:play_for_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :play_for_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/debutTeam> ;
  lemon:subjOfProp  :play_for_obj ;
  lemon:objOfProp   :play_for_subj ;
  lemon:condition   :play_for_sense_1_condition .

:play_for_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Athlete> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/SportsTeam> .


:play_for_obj lemon:marker :per .

## Prepositions ##
:per a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "per"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

