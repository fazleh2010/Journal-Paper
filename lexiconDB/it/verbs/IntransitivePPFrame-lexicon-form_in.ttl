@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :form_in ;
  lemon:entry    :nel .

:form_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_form_in ;
  lemon:otherForm      :form_form_in_past ;
  lemon:sense          :form_in_sense_1 ;
  lemon:synBehavior    :form_in_frame .

:form_form_in a           lemon:Form ;
  lemon:writtenRep     "formarsi"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_form_in a      lemon:Form ;
  lemon:writtenRep "si forma"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_form_in_past a lemon:Form ;
  lemon:writtenRep  "formata"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:form_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :form_in_subj ;
  lexinfo:prepositionalAdjunct :form_in_obj .

:form_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :form_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/activeYearsStartYear> ;
  lemon:subjOfProp  :form_in_obj ;
  lemon:objOfProp   :form_in_subj ;
  lemon:condition   :form_in_sense_1_condition .

:form_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Band> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:form_in_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

