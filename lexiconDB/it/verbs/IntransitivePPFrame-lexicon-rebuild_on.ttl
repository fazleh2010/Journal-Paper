@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :rebuild_on ;
  lemon:entry    :nel .

:rebuild_on a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_rebuild_on ;
  lemon:otherForm      :form_rebuild_on_past ;
  lemon:sense          :rebuild_on_sense_1 ;
  lemon:synBehavior    :rebuild_on_frame .

:form_rebuild_on a           lemon:Form ;
  lemon:writtenRep     "ricostruire"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_rebuild_on a      lemon:Form ;
  lemon:writtenRep "riscostruisce"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_rebuild_on_past a lemon:Form ;
  lemon:writtenRep  "ricostruito"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:rebuild_on_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :rebuild_on_subj ;
  lexinfo:prepositionalAdjunct :rebuild_on_obj .

:rebuild_on_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :rebuild_on_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/rebuildingDate> ;
  lemon:subjOfProp  :rebuild_on_obj ;
  lemon:objOfProp   :rebuild_on_subj ;
  lemon:condition   :rebuild_on_sense_1_condition .

:rebuild_on_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/ArchitecturalStructure> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:rebuild_on_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

