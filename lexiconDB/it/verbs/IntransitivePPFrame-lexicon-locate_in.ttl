@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :locate_in ;
  lemon:entry    :in .

:locate_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_locate_in ;
  lemon:otherForm      :form_locate_in_past ;
  lemon:sense          :locate_in_sense_1 ;
  lemon:synBehavior    :locate_in_frame .

:form_locate_in a           lemon:Form ;
  lemon:writtenRep     "trovarsi"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_locate_in a      lemon:Form ;
  lemon:writtenRep "si trova"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_locate_in_past a lemon:Form ;
  lemon:writtenRep  "trovata"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:locate_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :locate_in_subj ;
  lexinfo:prepositionalAdjunct :locate_in_obj .

:locate_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :locate_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/location> ;
  lemon:subjOfProp  :locate_in_obj ;
  lemon:objOfProp   :locate_in_subj ;
  lemon:condition   :locate_in_sense_1_condition .

:locate_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/City> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Country> .


:locate_in_obj lemon:marker :in .

## Prepositions ##
:in a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

