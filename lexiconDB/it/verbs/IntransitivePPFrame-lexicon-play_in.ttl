@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :play_in ;
  lemon:entry    :in .

:play_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_play_in ;
  lemon:otherForm      :form_play_in_past ;
  lemon:sense          :play_in_sense_1 ;
  lemon:synBehavior    :play_in_frame .

:form_play_in a           lemon:Form ;
  lemon:writtenRep     "recitare"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_play_in a      lemon:Form ;
  lemon:writtenRep "recita"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_play_in_past a lemon:Form ;
  lemon:writtenRep  "recitato"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:play_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :play_in_subj ;
  lexinfo:prepositionalAdjunct :play_in_obj .

:play_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :play_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/member> ;
  lemon:subjOfProp  :play_in_obj ;
  lemon:objOfProp   :play_in_subj ;
  lemon:condition   :play_in_sense_1_condition .

:play_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Band> .


:play_in_obj lemon:marker :in .

## Prepositions ##
:in a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "in"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

