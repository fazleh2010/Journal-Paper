@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :flow_through ;
  lemon:entry    :attraverso .

:flow_through a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_flow_through ;
  lemon:otherForm      :form_flow_through_past ;
  lemon:sense          :flow_through_sense_1 ;
  lemon:synBehavior    :flow_through_frame .

:form_flow_through a           lemon:Form ;
  lemon:writtenRep     "passare"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_flow_through a      lemon:Form ;
  lemon:writtenRep "passa"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_flow_through_past a lemon:Form ;
  lemon:writtenRep  "passava"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:flow_through_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :flow_through_subj ;
  lexinfo:prepositionalAdjunct :flow_through_obj .

:flow_through_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :flow_through_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/country> ;
  lemon:subjOfProp  :flow_through_obj ;
  lemon:objOfProp   :flow_through_subj ;
  lemon:condition   :flow_through_sense_1_condition .

:flow_through_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/River> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Country> .


:flow_through_obj lemon:marker :attraverso .

## Prepositions ##
:attraverso a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "attraverso"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

