@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :split_up_in ;
  lemon:entry    :nel .

:split_up_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_split_up_in ;
  lemon:otherForm      :form_split_up_in_past ;
  lemon:sense          :split_up_in_sense_1 ;
  lemon:synBehavior    :split_up_in_frame .

:form_split_up_in a           lemon:Form ;
  lemon:writtenRep     "dividere"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_split_up_in a      lemon:Form ;
  lemon:writtenRep "divide"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_split_up_in_past a lemon:Form ;
  lemon:writtenRep  "divisa"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:split_up_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :split_up_in_subj ;
  lexinfo:prepositionalAdjunct :split_up_in_obj .

:split_up_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :split_up_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/activeYearsEndYear> ;
  lemon:subjOfProp  :split_up_in_obj ;
  lemon:objOfProp   :split_up_in_subj ;
  lemon:condition   :split_up_in_sense_1_condition .

:split_up_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Band> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:split_up_in_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

