@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :published_on ;
  lemon:entry    :il .

:published_on a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_published_on ;
  lemon:otherForm      :form_published_on_past ;
  lemon:sense          :published_on_sense_1 ;
  lemon:synBehavior    :published_on_frame .

:form_published_on a           lemon:Form ;
  lemon:writtenRep     "pubblicare"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_published_on a      lemon:Form ;
  lemon:writtenRep "pubblica"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_published_on_past a lemon:Form ;
  lemon:writtenRep  "pubblicato"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:published_on_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :published_on_subj ;
  lexinfo:prepositionalAdjunct :published_on_obj .

:published_on_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :published_on_ontomap ;
  lemon:reference   <dbp:published> ;
  lemon:subjOfProp  :published_on_obj ;
  lemon:objOfProp   :published_on_subj ;
  lemon:condition   :published_on_sense_1_condition .

:published_on_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Song> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:published_on_obj lemon:marker :il .

## Prepositions ##
:il a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "il"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

