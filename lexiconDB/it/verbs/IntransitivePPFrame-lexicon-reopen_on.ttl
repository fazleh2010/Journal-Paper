@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :reopen_on ;
  lemon:entry    :nel .

:reopen_on a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_reopen_on ;
  lemon:otherForm      :form_reopen_on_past ;
  lemon:sense          :reopen_on_sense_1 ;
  lemon:synBehavior    :reopen_on_frame .

:form_reopen_on a           lemon:Form ;
  lemon:writtenRep     "riaprire"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_reopen_on a      lemon:Form ;
  lemon:writtenRep "riapre"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_reopen_on_past a lemon:Form ;
  lemon:writtenRep  "riaperto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:reopen_on_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :reopen_on_subj ;
  lexinfo:prepositionalAdjunct :reopen_on_obj .

:reopen_on_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :reopen_on_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/reopeningDate> ;
  lemon:subjOfProp  :reopen_on_obj ;
  lemon:objOfProp   :reopen_on_subj ;
  lemon:condition   :reopen_on_sense_1_condition .

:reopen_on_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/ArchitecturalStructure> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:reopen_on_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

