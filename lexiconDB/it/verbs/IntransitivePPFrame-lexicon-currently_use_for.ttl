@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :currently_use_for ;
  lemon:entry    :come .

:currently_use_for a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_currently_use_for ;
  lemon:otherForm      :form_currently_use_for_past ;
  lemon:sense          :currently_use_for_sense_1 ;
  lemon:synBehavior    :currently_use_for_frame .

:form_currently_use_for a           lemon:Form ;
  lemon:writtenRep     "usuare attualmente"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_currently_use_for a      lemon:Form ;
  lemon:writtenRep "attualmente usa"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_currently_use_for_past a lemon:Form ;
  lemon:writtenRep  "attualmente usata"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:currently_use_for_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :currently_use_for_subj ;
  lexinfo:prepositionalAdjunct :currently_use_for_obj .

:currently_use_for_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :currently_use_for_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/currentlyUsedFor> ;
  lemon:subjOfProp  :currently_use_for_obj ;
  lemon:objOfProp   :currently_use_for_subj ;
  lemon:condition   :currently_use_for_sense_1_condition .

:currently_use_for_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/ArchitecturalStructure> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/string> .


:currently_use_for_obj lemon:marker :come .

## Prepositions ##
:come a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "come"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

