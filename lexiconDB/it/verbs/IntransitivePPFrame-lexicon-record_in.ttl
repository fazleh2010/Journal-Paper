@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :record_in ;
  lemon:entry    :presso .

:record_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_record_in ;
  lemon:otherForm      :form_record_in_past ;
  lemon:sense          :record_in_sense_1 ;
  lemon:synBehavior    :record_in_frame .

:form_record_in a           lemon:Form ;
  lemon:writtenRep     "registrare"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_record_in a      lemon:Form ;
  lemon:writtenRep "registra"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_record_in_past a lemon:Form ;
  lemon:writtenRep  "registrato"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:record_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :record_in_subj ;
  lexinfo:prepositionalAdjunct :record_in_obj .

:record_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :record_in_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/recordedIn> ;
  lemon:subjOfProp  :record_in_obj ;
  lemon:objOfProp   :record_in_subj ;
  lemon:condition   :record_in_sense_1_condition .

:record_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/MusicalWork> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/PopulatedPlace> .


:record_in_obj lemon:marker :presso .

## Prepositions ##
:presso a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "presso"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

