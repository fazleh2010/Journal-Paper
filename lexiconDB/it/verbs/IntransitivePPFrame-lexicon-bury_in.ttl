@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :bury_in ;
  lemon:entry    :nel .

:bury_in a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_bury_in ;
  lemon:otherForm      :form_bury_in_past ;
  lemon:sense          :bury_in_sense_1 ;
  lemon:sense          :bury_in_sense_2 ;
  lemon:synBehavior    :bury_in_frame .

:form_bury_in a           lemon:Form ;
  lemon:writtenRep     "seppellire"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_bury_in a      lemon:Form ;
  lemon:writtenRep "seppellisce"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_bury_in_past a lemon:Form ;
  lemon:writtenRep  "sepolto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:bury_in_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :bury_in_subj ;
  lexinfo:prepositionalAdjunct :bury_in_obj .

:bury_in_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :bury_in_ontomap ;
  lemon:reference   <dbp:burialPlace> ;
  lemon:subjOfProp  :bury_in_obj ;
  lemon:objOfProp   :bury_in_subj ;
  lemon:condition   :bury_in_sense_1_condition .

:bury_in_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/City> .

:bury_in_sense_2 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :bury_in_ontomap ;
  lemon:reference   <dbp:burialPlace> ;
  lemon:subjOfProp  :bury_in_obj ;
  lemon:objOfProp   :bury_in_subj ;
  lemon:condition   :bury_in_sense_2_condition .

:bury_in_sense_2_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/City> .


:bury_in_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

