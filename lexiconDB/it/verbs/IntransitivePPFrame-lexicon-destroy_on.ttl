@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :destroy_on ;
  lemon:entry    :nel .

:destroy_on a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_destroy_on ;
  lemon:otherForm      :form_destroy_on_past ;
  lemon:sense          :destroy_on_sense_1 ;
  lemon:synBehavior    :destroy_on_frame .

:form_destroy_on a           lemon:Form ;
  lemon:writtenRep     "dsitruggere"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:form_destroy_on a      lemon:Form ;
  lemon:writtenRep "distrugge"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:form_destroy_on_past a lemon:Form ;
  lemon:writtenRep  "distrutto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:destroy_on_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :destroy_on_subj ;
  lexinfo:prepositionalAdjunct :destroy_on_obj .

:destroy_on_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :destroy_on_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/demolitionDate> ;
  lemon:subjOfProp  :destroy_on_obj ;
  lemon:objOfProp   :destroy_on_subj ;
  lemon:condition   :destroy_on_sense_1_condition .

:destroy_on_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/ArchitecturalStructure> ;
  lemon:propertyRange  <http://www.w3.org/2001/XMLSchema/date> .


:destroy_on_obj lemon:marker :nel .

## Prepositions ##
:nel a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "nel"@it ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

