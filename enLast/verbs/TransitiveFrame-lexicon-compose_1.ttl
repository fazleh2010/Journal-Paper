@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "en" ;
  lemon:entry    :to_compose_1 ;
  lemon:entry    :compose_1ed ;
  lemon:entry    :form_compose_1_preposition .

:to_compose_1 a           lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_compose_1 ;
  lemon:otherForm      :form_compose_1s ;
  lemon:otherForm      :form_compose_1ed ;
  lemon:otherForm      :form_compose_1perfect ;
  lemon:sense          :compose_1_sense_1 ;
  lemon:synBehavior    :compose_1_frame_transitive .

:form_compose_1 a         lemon:Form ;
  lemon:writtenRep     "compose"@en ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_compose_1s a    lemon:Form ;
  lemon:writtenRep "composes"@en ;
  lexinfo:person   lexinfo:secondPerson .

:form_compose_1ed a   lemon:Form ;
  lemon:writtenRep "composed"@en ;
  lexinfo:tense    lexinfo:past .

:form_compose_1perfect a   lemon:Form ;
  lemon:writtenRep "composed"@en ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:compose_1_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject          :compose_1_subj ;
  lexinfo:directObject     :compose_1_obj .

:compose_1_sense_1 a   lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :compose_1_sense_1 ;
  lemon:reference   <http://dbpedia.org/ontology/musicComposer> ;
  lemon:subjOfProp  :compose_1_obj ;
  lemon:objOfProp   :compose_1_subj ;
  lemon:condition   :compose_1_sense_1_condition .


:compose_1_sense_1_condition a    lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Film> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Person> .

:compose_1ed a            lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_compose_1ed_canonical ;
  lemon:otherForm      :form_compose_1ed_by ;
  lemon:synBehavior    :compose_1ed_frame_adjectivepp ;
  lemon:sense          :compose_1ed_ontomap .

:form_compose_1ed_canonical a lemon:Form ;
  lemon:writtenRep         "compose"@en .

:form_compose_1ed_by a    lemon:Form ;
  lemon:writtenRep     "compose"@en ;
  lexinfo:verbFormMood lexinfo:participle .


:compose_1ed_frame_adjectivepp a  lexinfo:AdjectivePPFrame ;
  lexinfo:copulativeSubject    :compose_1ed_subj ;
  lexinfo:prepositionalAdjunct :compose_1ed_obj .

:compose_1ed_ontomap a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :compose_1ed_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/musicComposer> ;
  lemon:subjOfProp  :compose_1ed_subj ;
  lemon:objOfProp   :compose_1ed_obj ;
  lemon:condition   :compose_1_sense_1_condition .
:compose_1ed_obj lemon:marker :by .

## Prepositions ##
:form_compose_1_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "by"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .

