@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "es" ;
  lemon:entry    :to_casarse ;
  lemon:entry    :casarseed ;
  lemon:entry    :form_casarse_preposition .

:to_casarse a           lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_casarse ;
  lemon:otherForm      :form_casarses ;
  lemon:otherForm      :form_casarseed ;
  lemon:sense          :casarse_sense_1 ;
  lemon:synBehavior    :casarse_frame_transitive .

:form_casarse a         lemon:Form ;
  lemon:writtenRep     "casarse"@es ;
  lexinfo:verbFormMood lexinfo:infinitive .

:form_casarses a    lemon:Form ;
  lemon:writtenRep "se casa"@es ;
  lexinfo:tense    lexinfo:past ;
  lexinfo:person   lexinfo:thirdPerson .


:form_casarses a    lemon:Form ;
  lemon:writtenRep "se casa"@es ;
  lexinfo:tense    lexinfo:past ;
  lexinfo:person   lexinfo:thirdPerson .

:form_casarseed a   lemon:Form ;
  lemon:writtenRep "casado"@es ;
  lexinfo:tense    lexinfo:perfect ;
  lexinfo:person   lexinfo:thirdPerson .

:casarse_frame_transitive a lexinfo:TransitiveFrame ;
  lexinfo:subject          :casarse_subj ;
  lexinfo:directObject     :casarse_obj .

:casarse_sense_1 a   lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :casarse_sense_1 ;
  lemon:reference   <http://dbpedia.org/ontology/spouse> ;
  lemon:subjOfProp  :casarse_obj ;
  lemon:objOfProp   :casarse_subj ;
  lemon:condition   :casarse_sense_1_condition .


:casarse_sense_1_condition a    lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Person> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Person> .

:casarseed a            lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:adjective ;
  lemon:canonicalForm  :form_casarseed_canonical ;
  lemon:otherForm      :form_casarseed_by ;
  lemon:synBehavior    :casarseed_frame_adjectivepp ;
  lemon:sense          :casarseed_ontomap .

:form_casarseed_canonical a lemon:Form ;
  lemon:writtenRep         "casarse"@es .

:form_casarseed_by a    lemon:Form ;
  lemon:writtenRep     "casarse"@es ;
  lexinfo:verbFormMood lexinfo:participle .


:casarseed_frame_adjectivepp a  lexinfo:AdjectivePPFrame ;
  lexinfo:copulativeSubject    :casarseed_subj ;
  lexinfo:prepositionalAdjunct :casarseed_obj .

:casarseed_ontomap a lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :casarseed_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/spouse> ;
  lemon:subjOfProp  :casarseed_subj ;
  lemon:objOfProp   :casarseed_obj ;
  lemon:condition   :casarse_sense_1_condition .
:casarseed_obj lemon:marker :por .

:arg2 lemon:marker :form_casarse_form_preposition .

## Prepositions ##

:form_casarse_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "por"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .