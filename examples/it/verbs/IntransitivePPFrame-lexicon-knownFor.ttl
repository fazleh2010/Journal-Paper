@prefix :        <http://localhost:8080/lexicon#> .

@prefix lexinfo: <http://www.lexinfo.net/ontology/2.0/lexinfo#> .
@prefix lemon:   <http://lemon-model.net/lemon#> .

@base            <http://localhost:8080#> .

:lexicon_en a    lemon:Lexicon ;
  lemon:language "it" ;
  lemon:entry    :knownFor ;
  lemon:entry    :form_knownFor_present_preposition .

:knownFor a             lemon:LexicalEntry ;
  lexinfo:partOfSpeech lexinfo:verb ;
  lemon:canonicalForm  :form_knownFor_present ;
  lemon:otherForm      :knownFor_present3rd ;
  lemon:otherForm      :knownFor_past ;
  lemon:otherForm      :knownFor_perfect ;
  lemon:sense          :knownFor_sense_1 ;
  lemon:synBehavior    :knownFor_frame .

:form_knownFor_present a           lemon:Form ;
  lemon:writtenRep     "essere noto"@it ;
  lexinfo:verbFormMood lexinfo:infinitive .


:knownFor_present3rd a      lemon:Form ;
  lemon:writtenRep "ï¿½ noto"@it ;
  lexinfo:number   lexinfo:singular ;
  lexinfo:person   lexinfo:thirdPerson ;
  lexinfo:tense    lexinfo:present .

:knownFor_past a lemon:Form ;
  lemon:writtenRep  "era noto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:past .

:knownFor_perfect a lemon:Form ;
  lemon:writtenRep  "era noto"@it ;
  lexinfo:number    lexinfo:singular ;
  lexinfo:person    lexinfo:thirdPerson ;
  lexinfo:tense     lexinfo:perfect .

:knownFor_frame a  lexinfo:IntransitivePPFrame ;
  lexinfo:subject              :knownFor_obj ;
  lexinfo:prepositionalAdjunct :knownFor_subj .

:knownFor_sense_1 a     lemon:OntoMap, lemon:LexicalSense ;
  lemon:ontoMapping :knownFor_ontomap ;
  lemon:reference   <http://dbpedia.org/ontology/knownFor> ;
  lemon:subjOfProp  :knownFor_obj ;
  lemon:objOfProp   :knownFor_subj ;
  lemon:condition   :knownFor_sense_1_condition .

:knownFor_sense_1_condition a      lemon:condition ;
  lemon:propertyDomain <http://dbpedia.org/ontology/Award> ;
  lemon:propertyRange  <http://dbpedia.org/ontology/Person> .


:knownFor_obj lemon:marker :per .

:arg2 lemon:marker :form_knownFor_present_preposition .

## Prepositions ##

:form_knownFor_present_preposition a                  lemon:SynRoleMarker ;
  lemon:canonicalForm  [ lemon:writtenRep "per"@en ] ;
  lexinfo:partOfSpeech lexinfo:preposition .